<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainScreenBottomNav">

    <!-- Fragment -->
    <fragment
        android:id="@+id/navHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        app:navGraph="@navigation/main_graph"/>

    <!-- Bottom Navigation Custom -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:visibility="gone"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEvent"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:tint="@color/black"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_cart"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cart"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:gravity="start|center"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                app:tint="@color/black"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_play"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/notification_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:cardElevation="20dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toTopOf="@+id/btnCart"
        app:layout_constraintEnd_toEndOf="@+id/btnCart"
        app:layout_constraintBottom_toTopOf="@+id/btnCart"
        app:layout_constraintStart_toEndOf="@+id/btnCart"/>

    <!-- Home Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnHome"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toStartOf="@id/btnEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_gravity="center"
            app:tint="@color/red"
            android:src="@drawable/ic_home"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnEvent"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp">
        <ImageView
            android:id="@+id/ivEvent"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:tint="@color/red"
            android:layout_gravity="center"
            android:src="@drawable/ic_event"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnInfo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnEvent">
        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:tint="@color/red"
            android:layout_gravity="center"
            android:src="@drawable/ic_info"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabEventAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:elevation="30dp"
        android:visibility="gone"
        app:shapeAppearance="@style/Widget.MaterialComponents.CircularProgressIndicator"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:backgroundTint="@color/red"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCart"/>

</androidx.constraintlayout.widget.ConstraintLayout>
