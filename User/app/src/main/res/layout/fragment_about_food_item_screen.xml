<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".fragments.homesection.AboutFoodItemScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="About food item"
            android:textColor="@color/red"
            android:fontFamily="@font/aclonica"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_back"
            android:layout_marginTop="40dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvBack"
            android:layout_marginTop="10dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_1"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/layoutItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cvImage"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:textSize="40sp"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:fontFamily="sans-serif-black"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/light_grey"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_veg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="veg"
                        android:gravity="center"
                        android:textColor="@color/grey"
                        android:textSize="25sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/tvCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tvPrice"
            app:layout_constraintBottom_toBottomOf="@+id/tvPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvPrice"
            android:text="$"
            android:layout_marginStart="40dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layoutItemName"
            android:text="30"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/tvCurrency"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textSize="20sp"
            android:textColor="@color/grey"
            android:fontFamily="sans-serif-black"
            android:drawableStart="@drawable/ic_fav"
            android:gravity="center|start"
            android:drawableTint="@color/red"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:id="@+id/layoutSpicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRating"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/light_grey"
                android:layout_gravity="center|start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Extra Spicy"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/light_grey"
                android:layout_gravity="center|start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Less Spicy"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="25sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/tvMoreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layoutSpicy"
            android:text="More info"
            android:textSize="35sp"
            android:layout_marginHorizontal="40dp"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/red"
            android:layout_marginVertical="15dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvMoreInfo"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/grey"
                android:text="Pizza, a globally popular dish, originates from Naples, Italy. It's a flatbread base typically topped with tomato sauce, cheese, and various ingredients, baked at high temperatures. The term PIZZA was first recorded in 997 AD in Southern Italy. Pizza has evolved from ancient flatbreads with toppings to the modern dish we know today"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>